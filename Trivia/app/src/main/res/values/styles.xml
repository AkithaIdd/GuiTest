<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_gery</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="btnStyle">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:padding">@dimen/butnn_padding</item>
        <item name="android:textColor">@color/btn_text_color</item>
    </style>

    <style name="ScoreStyle" parent="Main_text">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:textColor">#FAF4F4</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>